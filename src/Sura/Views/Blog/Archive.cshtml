@model IEnumerable<Sura.Views.Blog.Models.Post>
@{
    var title = "Archive: ";
    
    if(ViewBag.Day != null)
    {
        title += ViewBag.Day + "/";
    } 
    if(ViewBag.Month != null)
    {
        title += ViewBag.Month + "/";
    } 
    
    ViewBag.Title = title + ViewBag.Year + "(" + Model.Count() + " posts)";

}
<h2>Archive: @if(ViewBag.Day != null) { @ViewBag.Day @Html.Raw("/"); } @if(ViewBag.Month != null) { @ViewBag.Month; @Html.Raw("/"); }@ViewBag.Year (@Model.Count() @Html.Raw("post")@if(Model.Count() > 1){@Html.Raw("s")})</h2>

@foreach (var post in Model)
{
  @Html.Partial("_Post", post)
}